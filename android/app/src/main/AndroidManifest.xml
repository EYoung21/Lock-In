<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lockin">
    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="false"
        android:theme="@style/AppTheme">

        <!-- Metadata for Google Sign-In -->
        <meta-data
            android:name="com.google.android.gms.auth.api.credentials.CLIENT_ID"
            android:value="293282385409-o6ame9v5jm4vr059rdb3ckp7ahb45jlo.apps.googleusercontent.com" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">
            
            <!-- Main launcher intent filter -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Intent filter to handle Google Sign-In -->
            <intent-filter>
                <action android:name="com.google.android.gms.auth.api.signin.SIGN_IN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
